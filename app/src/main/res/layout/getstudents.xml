<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.au.allotedv5.Getstudents"
    tools:showIn="Getstudents"

    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/finallogo"
        android:scaleType="fitXY"
        android:paddingBottom="60dp"
        android:layout_alignBottom="@+id/editText3"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:hint="          Enter Registration No."

        android:textColorHint="#fefdfd"
        android:background="#33C0C2CD"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="258dp"
        android:layout_height="40dp"
        android:id="@+id/editText2"
        android:hint="Enter or Select Slot(s)-Example: A1,B1,TC1,L45,L46"
        android:textColorHint="#fefdfd"
        android:layout_marginBottom="24dp"
        android:background="#33C0C2CD"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:layout_marginRight="2dp"
        android:textSize="15dp"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:text="Save Details"
        android:id="@+id/button"
        android:onClick="getkeyandstring"
        android:layout_alignParentBottom="true"
        android:textSize="13dp"
        android:background="#803261AC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fefdfd"/>


    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/editText3"
        android:hint="                    Enter Name"
        android:textColorHint="#fefdfd"
        android:background="#33C0C2CD"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_above="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="SELECT SLOT(S)"
        android:id="@+id/button5"
        android:textSize="9dp"
        android:onClick="selectSlots"
        android:background="#803261AC"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:textColor="#fefdfd"/>


</RelativeLayout>

